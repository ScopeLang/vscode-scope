{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Scope",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#boolean"
		},
		{
			"include": "#asmVar"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.scope",
					"match": "\\b(func|import|ret|breakpoint|if|else|while|for|assembly|step|namespace|using)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.built-in.scope",
					"match": "\\b(void|int|str|bool|dec)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.scope",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.scope",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.scope",
					"match": "-?\\b[0-9']\\.\\d+\\b"
				},
				{
					"name": "constant.numeric.scope",
					"match": "-?\\b[0-9']+\\b"
				},
				{
					"name": "constant.numeric.scope",
					"match": "-?\\binfinity\\b"
				},
				{
					"name": "constant.numeric.scope",
					"match": "\\bnan\\b"
				}
			]
		},
		"boolean": {
			"patterns": [
				{
					"name": "constant.language.boolean.scope",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"asmVar": {
			"patterns": [
				{
					"name": "variable.name.scope",
					"match": "\\$[^\\s]+\\$"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"include": "#comment-line"
				},
				{
					"include": "#comment-block"
				},
				{
					"include": "#comment-doc"
				}
			]
		},
		"comment-block": {
			"name": "comment.block.scope",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"comment-line": {
			"name": "comment.single.line.scope",
			"begin": "//",
			"end": "$"
		},
		"comment-doc": {
			"name": "comment.block.documentation.scope",
			"begin": "/\\%",
			"end": "\\%/"
		}
	},
	"scopeName": "source.scope"
}